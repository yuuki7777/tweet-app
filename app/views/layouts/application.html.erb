<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="header-bar">
  <div class="header-left">
      <p>Photogram</p>
  </div>
  <div class="header-right">
  <ul>
  <%if @current_user %>
      <li>
         <%= link_to("投稿一覧","/posts/index", class:"link")%>
      </li>
      <li>
         <%= link_to("新規投稿","/posts/new", class:"link")%>
      </li>
      <li>
         <%=link_to("ログアウト","/logout", {method: "post", class:"link"})%>
      </li>
      
      <% else %>
      <li>
         <%=link_to("ログイン","/login", class:"link")%>
      </li>
      <li>
         <%= link_to("新規登録","/users/new", class:"link")%>
      </li>
      <% end %>
    </ul>
  </div>
</div>
  <body>
    <%= yield %>
  </body>
</html>
